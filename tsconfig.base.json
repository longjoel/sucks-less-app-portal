{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@slap/sdk": ["packages/sdk/src/index.ts"],
      "@slap/ui": ["packages/ui/src/index.tsx"],
      "@slap/calculator": ["apps/calculator/src/index.tsx"],
      "@slap/journal": ["apps/journal/src/index.tsx"],
      "@slap/mh-checkin": ["apps/mh-checkin/src/index.tsx"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
